<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <update handle="slideshow_slideshow_grid"/>
    <body>
        <referenceBlock name="page.title">
    	    <action method="setPageTitle">
    	        <argument name="pageTitle" xsi:type="string">Slideshow Manager</argument>
    	    </action>
    	</referenceBlock>
        <referenceContainer name="page.main.actions">
    	    <block class="Magento\Backend\Block\Store\Switcher" name="store_switcher">
    	        <action method="setUseConfirm">
    	            <argument name="params" xsi:type="string">0</argument>
    	        </action>
    	    </block>
    	</referenceContainer>
        <referenceContainer name="content">
            <block class="Edge\Slideshow\Block\Adminhtml\Slideshow\Grid" name="admin.slideshow.grid"/>
        </referenceContainer>
        <referenceContainer name="admin.slideshow.slideshow.view">
            <block class="Magento\Framework\View\Element\Text\ListText" name="slideshow.bottom.links">
                <block class="Magento\Catalog\Block\Adminhtml\Rss\Grid\Link" name="slideshow.rss.link"/>
            </block>
        </referenceContainer>
    </body>
</page>